login
  base-color = #569c44
  accent-color = #f68c3e

  background-color base-color
  display block
  height 100vh
  left 0
  position absolute
  top 0
  width 100vw

  .login-container
    background-color rgba(#fff, 0.85)
    border-radius 20px
    box-shadow 0 14px 28px rgba(#000, 0.25),
               0 10px 10px rgba(#000, 0.22)
    box-sizing border-box
    height 430px
    left 50%
    padding 30px 40px
    position relative
    top 50%
    transform translate(-50%, -50%)
    width 320px
  
  .handle
    margin 20px 0 10px 10px
    color rgba(#666, 0.7)
    font-size 18px

  input, select
    background-color transparent
    border none
    border-bottom 2px solid rgba(base-color, 0.5)
    box-sizing border-box
    cursor pointer
    font-size 18px
    margin-bottom 25px
    margin-top 10px
    padding 10px
    width 100%

    &:focus
      outline none
      border-bottom 2px solid accent-color

  label
    color #666
    font-size 22px
    font-weight normal

  button
    width 100%
    transition all ease 0.3s

  option
    color #fff
